{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": ["src/**/*.ts", "locales/*.ts"],
  "exclude": ["node_modules/*", "public/*"],
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "resolveJsonModule": true,
    "sourceMap": true,
    "inlineSources": true,
    "strict": true
  }
}
